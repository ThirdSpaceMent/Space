@model prjWebSpaceMent.Models.ClassSpaces

@{
    ViewBag.Title = "Spaces_List_Detail";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<section id="subspaces">
    <div class="container wow fadeInUp">
        <div class="section-header p-5">
            <h2>發現場地資訊有誤嗎？</h2>
            <p>立即更新場地資訊吧！</p>
        </div>
        <div class="AnimatedButton">
            <a class="AnimatedButton-a" style="--clr:#f82249; --i: 0;" href="/Spaces/Spaces_List"><span class="AnimatedButton-a-span">場地管理</span></a>
        </div>
    </div>
</section>

<main>
    <div class="container">
        <div class="d-flex justify-content-center mt-3">
            <h1 class="text-center">@Html.DisplayFor(model => model.sName)<br /> <span class="badge badge-info" style="font-size:16px">@Html.DisplayFor(model => model.sType)</span></h1>
        </div>
        <section id="gallery" class="wow fadeInUp mt-1 mb-3">
            <div class="owl-carousel gallery-carousel">
                <a href="~/img/gallery/@Html.DisplayFor(model => model.sPhoto)"><img src="~/img/gallery/@Html.DisplayFor(model => model.sPhoto)" alt=""></a>
                <a href="~/img/gallery/@Html.DisplayFor(model => model.sPhoto_First)"><img src="~/img/gallery/@Html.DisplayFor(model => model.sPhoto_First)" alt=""></a>
                <a href="~/img/gallery/@Html.DisplayFor(model => model.sPhoto_Second)"><img src="~/img/gallery/@Html.DisplayFor(model => model.sPhoto_Second)" alt=""></a>
            </div>
        </section>
    </div>
    <div class="container">
        <div class="d-flex justify-content-center">
            <button class="btn btn-success mb-3 mr-3">@Html.ActionLink("查看評價", "ShowRating", "Rating", new { sNumber = Model.sNumber }, null)</button>
            <a href="https://www.google.com/maps/place/@Model.sAddr" target="_blank"><img src="~/img/Google_Maps.jpg" style="width:45px;height:36px;" /> </a>
        </div>
        <div class="row justify-content-around mb-3">
            <div class="col-lg-6 mb-3">
                <div class="mb-2 list-group-item border-0">
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sAddr)</span></h3>
                    <label class="input-group">@Html.DisplayFor(model => model.sAddr)</label>
                </div>
                <div class="mb-2 list-group-item border-0">
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sPhone)</span></h3>
                    <label class="input-group">@Html.DisplayFor(model => model.sPhone)</label>
                </div>
                <div class="mb-2 list-group-item border-0">
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sFloor)</span></h3>
                    <label class="input-group">@Html.DisplayFor(model => model.sFloor)</label>
                </div>
                <div class="mb-2 list-group-item border-0">
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sHeight)</span></h3>
                    <label class="input-group">@Html.DisplayFor(model => model.sHeight)</label>
                </div>
                <div class="mb-2 list-group-item border-0">
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sArea)</span></h3>
                    <label class="input-group">@Html.DisplayFor(model => model.sArea)</label>
                </div>
                <div class="mb-2 list-group-item border-0">
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sCapacity)</span></h3>
                    <label class="input-group">@Html.DisplayFor(model => model.sCapacity)</label>
                </div>
            </div>
            <div class="col-lg-6 mb-3">
                <div class="mb-2 list-group-item border-0">
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sRent)</span></h3>
                    <label class="input-group">@Html.DisplayFor(model => model.sRent)</label>
                </div>
                <div class="mb-2 list-group-item" hidden>
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sRate)</span></h3>
                    <label class="input-group">@Html.DisplayFor(model => model.sRate)</label>
                </div>
                <div class="mb-2 list-group-item border-0">
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sOpeningTime)</span></h3>
                    <label class="input-group">@Html.DisplayFor(model => model.sOpeningTime)</label>
                </div>
                <div class="mb-2 list-group-item border-0">
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sSecurity)</span></h3>
                    <textarea readonly style="width: 550px; height: 100px; " class="list-group-item">@Html.DisplayFor(model => model.sSecurity)</textarea>
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sTraffic)</span></h3>
                    <textarea readonly style="width: 550px; height: 100px; " class="list-group-item">@Html.DisplayFor(model => model.sTraffic)</textarea>
                    <h3><span class="badge badge-info">@Html.DisplayNameFor(model => model.sIntro)</span></h3>
                    <textarea readonly style="width: 550px; height: 100px; " class="list-group-item mb-5">@Html.DisplayFor(model => model.sIntro)</textarea>
                </div>
            </div>
        </div>
    </div>
</main>
