@model IEnumerable<prjWebSpaceMent.Models.Spaces>

@{
    ViewBag.Title = "場地清單";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<!--Intro Section-->
<section id="subspaces">
    <div class="container wow fadeInUp">
        <div class="section-header p-5">
            <h2>有新的場地要增加嗎？</h2>
            <p>點擊下方按鈕增加場地吧！</p>
        </div>

        <form method="POST" action="#">
            <div class="form-row justify-content-center">
                <div class="col-auto">
                    <a href="https://localhost:44386/Spaces/Spaces_Create" class="joinbutton-a">
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        Create Now！
                    </a>
                </div>
            </div>
        </form>

    </div>
</section>

<main>
    <div class="container pr-0 pl-0">
        <div class="section-header p-3">
            <h2>出租場地清單</h2>
            <p>您可以在這裡編輯場地資訊！</p>
        </div>
        <table class="table border mr-0 ml-0">
            <tr>
                <th class="text-center">
                    序號
                </th>
                <th>
                    @*場地名稱*@
                    @Html.DisplayNameFor(model => model.sName)
                </th>
                <th>
                    @*場地類型*@
                    @Html.DisplayNameFor(model => model.sType)
                </th>
                <th>
                    @*地址*@
                    @Html.DisplayNameFor(model => model.sAddr)
                </th>
                <th>
                    @*聯絡電話*@
                    @Html.DisplayNameFor(model => model.sPhone)
                </th>
                <th>
                    @*可容納人數*@
                    @Html.DisplayNameFor(model => model.sCapacity)
                </th>
                <th>
                    @*營業時間*@
                    @Html.DisplayNameFor(model => model.sOpeningTime)
                </th>
                <th class="text-center">
                    功能
                </th>
            </tr>

            @{
                int count = 0;
                foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td class="text-center">
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sAddr)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sCapacity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sOpeningTime)
                        </td>

                        <td>
                            <button type="submit" class="btn btn-success" style="font-size:14px">@Html.ActionLink("修改場地", "Spaces_Edit", new { id = item.sNumber })</button>|
                            <button type="submit" class="btn btn-danger" style="font-size:14px">@Html.ActionLink("刪除場地", "Spaces_Delete", "Spaces", new { id = item.sNumber }, new { onclick = "return confirm('確定要刪除嗎?')" })</button>|
                            <button type="submit" class="btn btn-info" style="font-size:14px">@Html.ActionLink("詳細資訊", "Spaces_List_Detail", new { id = item.sNumber })</button>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</main>

