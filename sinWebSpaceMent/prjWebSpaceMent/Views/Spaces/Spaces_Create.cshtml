
@model prjWebSpaceMent.Models.Spaces

@{
    ViewBag.Title = "新增場地";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<!--Intro Section-->
<section id="intro">
    <div class="slider-wrapper">
        <div class="owl-carousel hero-carousel">
            <div class="hero-carousel-item">
                <img src="~/img/bg_image_3.jpg" alt="">
                <div class="img-caption">
                    <div class="subhead">讓我們幫您吧，想找哪個場地?</div>
                    <h1 class="mb-4">開始找尋適合您的場地吧！</h1>
                    <a href="/Spaces/Spaces_List" class="joinbutton-a">
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        找場地
                    </a>
                    <div class="subhead mb-5">往下繼續新增場地...</div>
                </div>
            </div>
            <div class="hero-carousel-item">
                <img src="~/img/bg_image_1.jpg" alt="">
                <div class="img-caption">
                    <div class="subhead">輕鬆刊登場地，曝光永不間斷</div>
                    <h1 class="mb-4">好場地，就該讓更多人知道！</h1>
                    <a href="/Home/Index/#subspaces" class="joinbutton-a">
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        成為場地主
                    </a>
                    <div class="subhead mb-5">往下繼續新增場地...</div>
                </div>
            </div>
            <div class="hero-carousel-item">
                <img src="~/img/bg_image_2.jpg" alt="">
                <div class="img-caption">
                    <div class="subhead">Hi！需要什麼協助嗎？</div>
                    <h1 class="mb-4">有什麼問題嗎？您來對地方了</h1>
                    <a href="/Home/Index/#faq" class="joinbutton-a">
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        常見問題
                    </a>
                    <div class="subhead mb-5">往下繼續新增場地...</div>
                </div>
            </div>
        </div>
    </div> <!-- .slider-wrapper -->
</section>

<main>
    <div class="section-header p-5">
        <h2>新增場地</h2>
    </div>
    <div class="container">
        <form method="post" action="~/Spaces/Spaces_Save">
            <div>
                <span>@Html.DisplayNameFor(model => model.sName)</span><br />
                <input type="text" name="txtsName" placeholder="必填" required />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sType)</span><br />
                <input type="text" name="txtsType" placeholder="必填" required />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sAddr)</span><br />
                <input type="text" name="txtsAddr" placeholder="必填" required />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sPhone)</span><br />
                <input type="text" name="txtsPhone" placeholder="必填" required />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sFloor)</span><br />
                <input type="text" name="txtsFloor" placeholder="必填" required />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sHeight)</span><br />
                <input type="text" name="txtsHeight" />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sArea)</span><br />
                <input type="text" name="txtsArea" />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sCapacity)</span><br />
                <input type="text" name="txtsCapacity" placeholder="必填" required />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sRent)</span><br />
                <input type="text" name="txtsRent" value="0" />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sRate)</span><br />
                <input type="text" name="txtsRate" value="0" />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sIntro)</span><br />
                <input type="text" name="txtsTntro" placeholder="必填" required />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sOpeningTime)</span><br />
                <input type="text" name="txtsOpeningTime" />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sSecurity)</span><br />
                <input type="text" name="txtsSecurity" />
            </div>
            <div>
                <span>@Html.DisplayNameFor(model => model.sTraffic)</span><br />
                <input type="text" name="txtsTraffic" />
            </div>
            <hr />
            <div>
                <input type="submit" value="建立場地" />
            </div>
        </form>
        <div>
            @Html.ActionLink("返回場地總覽", "Spaces_List")
        </div>
    </div>
</main>
