@model prjWebSpaceMent.Models.Members

@{
    ViewBag.Title = "會員註冊";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Intro Section-->
<section id="subspaces">
    <div class="container wow fadeInUp">
        <div class="section-header p-5">
            <h2>已經有會員了嗎？</h2>
            <p>請點擊下方按鈕立即登入吧！</p>
        </div>

        <form method="POST" action="#">
            <div class="form-row justify-content-center">
                <div class="col-auto">
                    <a href="/Home/Login" class="joinbutton-a">
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        Login Now！
                    </a>
                </div>
            </div>
        </form>

    </div>
</section>

<main>
    <div class="container">
        <div class="section-header p-3">
            <h2>會員註冊</h2>
            <p>請填寫以下基本資料註冊會員</p>
        </div>


        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()
            <div class="row justify-content-between">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.mAccount, htmlAttributes: new { @class = "control-label col-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.mAccount, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-muted mb-3">請輸入您要使用的註冊帳號</small>
                            @Html.ValidationMessageFor(model => model.mAccount, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.mPassword, htmlAttributes: new { @class = "control-label col-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.mPassword, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-muted mb-3">請輸入6~12位英數字密碼</small>
                            @Html.ValidationMessageFor(model => model.mPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.mName, htmlAttributes: new { @class = "control-label col-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.mName, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-muted mb-3">請輸入您的完整姓名</small>
                            @Html.ValidationMessageFor(model => model.mName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.mNickName, htmlAttributes: new { @class = "control-label col-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.mNickName, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-muted mb-3">請輸入您要使用的暱稱</small>
                            @Html.ValidationMessageFor(model => model.mNickName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.mEmail, htmlAttributes: new { @class = "control-label col-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.mEmail, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-muted mb-3">請輸入您的電子信箱</small>
                            @Html.ValidationMessageFor(model => model.mEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.mPhone, htmlAttributes: new { @class = "control-label col-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.mPhone, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-muted mb-3">請輸入您的連絡電話</small>
                            @Html.ValidationMessageFor(model => model.mPhone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.mGender, htmlAttributes: new { @class = "control-label col-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.mGender, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-muted mb-3">請輸入您的性別</small>
                            @Html.ValidationMessageFor(model => model.mGender, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.mTWid, htmlAttributes: new { @class = "control-label col-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.mTWid, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-muted mb-3">請輸入您的身分證字號(場地主驗證使用)</small>
                            @Html.ValidationMessageFor(model => model.mTWid, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.mBirthday, htmlAttributes: new { @class = "control-label col-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.mBirthday, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-muted mb-3">請輸入您出生年月日(ex:1999/01/01)</small>
                            @Html.ValidationMessageFor(model => model.mBirthday, "", new { @class = "text-danger" })
                        </div>
                    </div>
                <div class="form-group">
                        <div class="col-md-12">
                            @Html.HiddenFor(model => model.mPoint, new { Value = "0" })
                            @Html.ValidationMessageFor(model => model.mPoint, "", new { @class = "text-danger" })
                        </div>
                    </div> 
                <div class="form-group">
                        <div class="col-md-12">
                            @Html.HiddenFor(model => model.mCreated_at, new { Value = DateTime.Now })
                            @Html.ValidationMessageFor(model => model.mCreated_at, "", new { @class = "text-danger" })
                        </div>
                    </div> 
                <div class="form-group">
                        <div class="col-md-12">
                            @Html.HiddenFor(model => model.mUpdated_at, new { Value = DateTime.Now })
                            @Html.ValidationMessageFor(model => model.mUpdated_at, "", new { @class = "text-danger" })
                        </div>
                    </div> 
            </div>
            <div class="form-group text-center">
                 <div class="col-md-offset-2 col-md-12 ">
                      <input type="submit" value="會員註冊" class="btn btn-success mr-5" />
                      <button class="btn btn-danger">@Html.ActionLink("返回首頁", "Index")</button>
                      @ViewBag.Message
                 </div>
            </div>
        }
</div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
