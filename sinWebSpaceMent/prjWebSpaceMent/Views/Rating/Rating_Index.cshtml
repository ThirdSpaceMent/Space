@model IEnumerable<prjWebSpaceMent.ViewModels.RatingViewModel>
@{
    ViewBag.Title = "Rating_Index";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<section id="subspaces">
    <div class="container wow fadeInUp">
        <div class="section-header p-5">
            <h2>不滿意嗎？</h2>
            <p>別擔心，我們還有很多更適合您的！</p>
        </div>

        <form method="POST" action="#">
            <div class="form-row justify-content-center">
                <div class="col-auto">
                    <a href="/Spaces/Spaces_Index" class="joinbutton-a">
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        <span class="joinbutton-a-span"></span>
                        找場地
                    </a>
                </div>
            </div>
        </form>

    </div>
</section>

<main>
    <div class="section-header p-3">
        <h2>場地評分評論管理</h2>
        <p>您可以在這裡檢視所有場地評論！</p>
    </div>
    <div class="container pr-0 pl-0 mb-5">
        <table style="width:100%; border:1px solid black;">
            <thead>
                <tr>
                    <th>
                        場地名
                    </th>
                    <th>
                        評分
                    </th>
                    <th>
                        評論
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr style="width:100%; border:1px solid black;">
                    <td>
                        @item.sName
                    </td>
                    <td>
                        @item.rRate
                    </td>
                    <td>
                        @item.rComment
                    </td>
                    <td>
                        <button type="submit" class="btn btn-info" style="font-size:14px">@Html.ActionLink("編輯", "EditRating", new { sNumber = item.sNumber })</button>

                        @*需新增評價刪除*@
                        <button type="submit" class="btn btn-danger" style="font-size:14px">@Html.ActionLink("刪除", "DeleteRating", new { sNumber = item.sNumber })</button>
                    </td>
                </tr>
            }
        </table>
    </div>

</main>

